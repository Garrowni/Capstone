@model TermProjectUI.Models.InventoryTaskModel

@{
    ViewBag.Title = "Delete";
}
    <style>
        a {
            color: white;
        }
    </style>

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Other Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Address: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.address)
        </dd>

        <dt>
            Date: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date)
        </dd>

        <dt>
            Time: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.time)
        </dd>
        <dt>
            Documents:
        </dt>

        <dd>
            @foreach (var item in Model.Documents)
            {

                <p> @Html.DisplayFor(model => item.Document) : @Html.DisplayFor(model => item.Description)</p>



            }
        </dd>
        <dt>
            Additional Information:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AdditionalInfo)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-default" style="color: white; margin-top: 2px; background-color: grey;border-color: black;" /> |
    <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Cancel", "Details", new { id = Model.Id }) </button>

</div>
    }
</div>
