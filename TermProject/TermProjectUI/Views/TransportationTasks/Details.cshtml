@model TermProjectUI.Models.TransportationTaskModel

@{
    ViewBag.Title = "Details";
}

<style>
    a{
        color: white;
    }
</style>

<br />
<br />
    <div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-xl-9">
                    <div class="row">
                        <div class="col">
                            <img src="~/Images/transportation_Nav.JPG" style="float: left; height: 15%; width: 15%;">
                            <h1 style="float: left;margin-top: 2%;">  @Html.DisplayFor(model => model.taskName)</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) </button>
                            <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) </button>



                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8" style="width: 95%; border-right: solid 1px lightgray">
                            <div class="row">
                                

                                    Items
                                    @foreach(var item in Model.Items) {
                                    <ul>
                                        <li>Name:  @Html.DisplayFor(model => item.ItemName) , Quantity: @Html.DisplayFor(model =>item.ItemQuantity) , Notes: @Html.DisplayFor(model =>item.ItemNote)</li>
                                       
                                    </ul>

                                    }

                               
                               
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8" style="width: 95%; border-right: solid 1px lightgray">
                            <div class="row">
                                <div class="col-md-4">

                                    Pick Up
                                    <ul>
                                        <li>Name:  @Html.DisplayFor(model => model.PUName) </li>
                                        <li>Address: @Html.DisplayFor(model => model.PUAddress)</li>
                                        <li>City: @Html.DisplayFor(model => model.PUCity)</li>
                                        <li>Postal Code:  @Html.DisplayFor(model => model.PUPostal)</li>

                                        <li>Date: @Html.DisplayFor(model => model.PUDate)</li>
                                        <li>Time: @Html.DisplayFor(model => model.PUTime)</li>
                                        <li>Notes:  @Html.DisplayFor(model => model.PUAdditional) </li>
                                    </ul>



                                </div>
                                <div class="col-md-4">

                                    Drop Off
                                    <ul>
                                        <li>Name:         @Html.DisplayFor(model => model.DOName) </li>
                                        <li>Address:      @Html.DisplayFor(model => model.DOAddress)</li>
                                        <li>City:         @Html.DisplayFor(model => model.DOCity)</li>
                                        <li>Postal Code:  @Html.DisplayFor(model => model.DOPostal)</li>
                                        <li>Date: @Html.DisplayFor(model => model.DODate)</li>
                                        <li>Time: @Html.DisplayFor(model => model.DOTime)</li>
                                        <li>Notes:        @Html.DisplayFor(model => model.DOAdditional) </li>
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            Additional Information: @Html.DisplayFor(model => model.AdditionalInfo)
                        </div>

                    </div>
                </div>
                <div class="col-md-4 col-xl-3">
                    <div class="row">
                        <div class="col">
                            <img src="~/Images/map.png" style="margin-top: 10%;  margin-left: -20px; width: 270px; height: 225px;   />
                        </div>
                    </div>

                    <br />
                    <br />
                    <div class="row">
                        <div class="col">
                            <br />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                Poster
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div><img class="mr-3" style=" float: left; width: 25px; height:25px;" src="~/Images/tsoler.jpg" /></div><small style="margin-left: 2px">   @Html.DisplayFor(model=>model.posterName)</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="card">
                                Requester
                            </div>
                        </div>
                    </div>

                    <div class="row">

                        <div><img class="mr-3" style=" float: left; width: 25px; height:25px;" src="~/Images/ellie.jpg" /></div><small style="margin-left: 2px"> @Html.DisplayFor(model=>model.Requester)</small>
                    </div><br />
                    <div class="row">
                        <div class="col">
                            <div class="card">
                                Assigned Volunteers
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <small style="float: left">0 Volunteers Assigned</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col"><button class="btn btn-primary" type="button" style="float:left;margin-top: 5%;background-color: grey;border-color: black;">Join Task</button>
                      </div>
               
                    </div>

                </div>
            </div>
        </div>
    </div>





