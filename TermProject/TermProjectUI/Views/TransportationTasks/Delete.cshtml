@model TermProjectUI.Models.TransportationTaskModel

@{
    ViewBag.Title = "Delete";
}

<style>
    a{
        color: white;
    }
</style>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TransportationTask</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Task:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taskName)
        </dd>

        <dt>
            Task Type:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taskType)
        </dd>

        <dt>
            Poster Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.posterName)
        </dd>

        <dt>
            Importance Level:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImportanceLevel)
        </dd>

        <dt>
            Requester:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Requester)
        </dd>

        <dt>
            Items:
        </dt>

        <dd>
           @foreach(var item in Model.Items) {
                                    
                                        <p>Name:  @Html.DisplayFor(model => item.ItemName) , Quantity: @Html.DisplayFor(model =>item.ItemQuantity) , Notes: @Html.DisplayFor(model =>item.ItemNote)</p>
                                       
                                 

                                    }
        </dd>

        <dt>
            Pick-up Address:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUAddress)
        </dd>

        <dt>
            Pick-up City:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUCity)
        </dd>

        <dt>
            Pick-up Postal Code:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUPostal)
        </dd>

        <dt>
            Pick-up Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUName)
        </dd>

        <dt>
            Pick-up Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUDate)
        </dd>

        <dt>
            Pick-up Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUTime)
        </dd>
        <dt>
            Pick-up Notes:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUAdditional)
        </dd>

        <dt>
            Drop-off Address:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOAddress)
        </dd>

        <dt>
            Drop-off City:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOCity)
        </dd>

        <dt>
            Drop-off Postal Code:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOPostal)
        </dd>

        <dt>
            Drop-off Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOName)
        </dd>

        <dt>
            Drop-off Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DODate)
        </dd>
        <dt>
            Drop-off Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOTime)
        </dd>
        <dt>
            Drop-off Notes:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOAdditional)
        </dd>

        <dt>
            Extra Notes:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdditionalInfo)
        </dd>








    </dl>


    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-default" style="color: white; margin-top: 2px; background-color: grey;border-color: black;" /> |
    <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Cancel", "Details", new { id = Model.Id }) </button>
    
</div>
    }
</div>
