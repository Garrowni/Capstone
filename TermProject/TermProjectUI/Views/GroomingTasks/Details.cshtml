@model TermProjectUI.Models.GroomingTaskModel

@{
    ViewBag.Title = "Details";
}

<style>
    a {
        color: white;
    }
</style>

<br />
<br />
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-xl-9">
                <div class="row">
                    <div class="col">
                        <img src="~/Images/grooming_Nav.JPG" style="float: left; height: 15%; width: 15%;">
                        <br />
                        <h1 style="float: left;margin-top: 2%;">  @Html.DisplayFor(model => model.taskName)</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) </button>
                        <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) </button>



                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8" style="width: 95%; border-right: solid 1px lightgray">
                        <div class="row">

                            <div class="col-md-4">

                                Dog Info
                                <ul>
                                    <li>Dog Name:  @Html.DisplayFor(model => model.dogName) </li>
                                    <li>Dog Age: @Html.DisplayFor(model => model.dogAge)</li>
                                    <li>Dog Size: @Html.DisplayFor(model => model.dogSize)</li>
                                    <li>Dog Breed:  @Html.DisplayFor(model => model.dogBreed)</li>
                                </ul>



                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">

                                Services
                                <ul>
                                    <li>Wash: @Html.DisplayFor(model => model.wash)</li>
                                    <li>Nails: @Html.DisplayFor(model => model.nailCleaning) </li>
                                    <li>Cut: @Html.DisplayFor(model => model.cut)</li>
                                    <li>Trim: @Html.DisplayFor(model => model.trim) </li>
                                    <li>Ear Cleaning: @Html.DisplayFor(model => model.earClean)</li>
                                    <li>Teeth Cleaning: @Html.DisplayFor(model => model.teethClean) </li>
                                </ul>



                            </div>
                        </div>
                        <div class="row" id="booked">
                            <div class="col-md-4">

                                Booked Info
                                <ul>
                                    <li>Booked: @Html.DisplayFor(model => model.booked)</li>
                                    <li id="book">@Html.DisplayFor(model => model.bookedStore)</li>
                                    <li>@Html.DisplayFor(model => model.bookedAddress)</li>
                                    <li>Booked Date: @Html.DisplayFor(model => model.bookedDate)</li>
                                    <li>Booked Time: @Html.DisplayFor(model => model.bookedTime)</li>
                                </ul>





                            </div>
                        </div>
                        <div class="row" id="prefered">
                            <div class="col-md-4">

                                Preference Info
                                <ul>
                                    <li>Prefered:  @Html.DisplayFor(model => model.booked)</li>
                                    <li id="pref">@Html.DisplayFor(model => model.prefStore)</li>
                                    <li>Prefered Address: @Html.DisplayFor(model => model.prefAddress) </li>
                                    <li>Prefered Date: @Html.DisplayFor(model => model.prefDate)</li>
                                   
                                </ul>

                            </div>

                        </div>
                        <div class="row" id="pay">
                            <div class="col-md-4">

                                Payed Info
                                <ul>
                                    <li>@Html.DisplayFor(model => model.paid)</li>
                                    <li id="receipt">@Html.DisplayFor(model => model.receipt)</li>
                                    <li>@Html.DisplayFor(model => model.payer)</li>
                                </ul>




                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">

                                Additional Information
                                <ul>
                                    <li>@Html.DisplayFor(model => model.AdditionalInfo)</li>
                                </ul>



                            </div>
                        </div>

                    </div>
                </div>


            </div>
            <div class="col-md-4 col-xl-3">
                <div class="row">
                    <div class="col">
                        <img src="~/Images/map.png" style="margin-top: 10%;  margin-left: -20px; width: 270px; height: 225px;       />
                    </div>
                </div>

                <br />
                <br />
                <div class="row">
                    <div class="col">
                        <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card">
                            Poster
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div><img class="mr-3" style=" float: left; width: 25px; height:25px;" src="@Html.DisplayFor(model=>model.posterPhoto)" /></div><small style="margin-left: 2px">   @Html.DisplayFor(model => model.posterName)</small>
                    </div>
                </div>


                <div class="row">
                    <div class="col">
                        <div class="card">
                            Requester
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div><img class="mr-3" style=" float: left; width: 25px; height:25px;" src="~/Images/ellie.jpg" /></div><small style="margin-left: 2px"> @Html.DisplayFor(model => model.requester)</small>
                </div><br />
                <div class="row">
                    <div class="col">
                        <div class="card">
                            Assigned Volunteers
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <small style="float: left">0 Volunteers Assigned</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button class="btn btn-primary" type="button" style="float:left;margin-top: 5%;background-color: grey;border-color: black;">Join Task</button>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>





