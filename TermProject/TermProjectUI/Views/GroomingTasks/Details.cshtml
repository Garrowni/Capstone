<script>
    var pay = document.getElementById("pay");
    var receipt = document.getElementById("receipt");

    var prefered = document.getElementById("prefered");
    var pref = document.getElementById("pref");

    var booked = document.getElementById("booked");
    var book = document.getElementById("book");
    if (book.innerText == "") {

       // pay.style.display = "none";
        booked.style.display = "none";
        prefered.style.display = "none";


    } else {

        //pay.style.display = "block";
        booked.style.display = "block";
        prefered.style.display = "none";
        if (receipt.innerText == "" || receipt.innerText == "") {
            pay.style.display = "none";
            
        } else {

            pay.style.display = "block";
            
        }


    }


    if (receipt.innerText == "" || receipt.innerText == "" ) {
        pay.style.display = "none";
        prefered.style.display = "block";

    } else {

        pay.style.display = "block";
        prefered.style.display = "none";
    }


 

    if (pref.innerText == "") {
       booked.style.display = "block";
        prefered.style.display = "none";


    } else {

        pay.style.display = "none";
        booked.style.display = "none";
        prefered.style.display = "block";
    }
  

</script>