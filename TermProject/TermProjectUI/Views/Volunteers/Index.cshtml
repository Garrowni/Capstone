@model IEnumerable<TermProjectUI.Models.VolunteerModel>

@{
    ViewBag.Title = "Index";
}





<link href="@Url.Content("https://fonts.googleapis.com/css?family=Playfair+Display:400,700")" rel="stylesheet" type="text/css" />

<link href="@Url.Content("~/assets/fonts/font-awesome.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/css/Comment.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/css/Community-ChatComments.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/css/Map-Clean.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/css/styles.css")" rel="stylesheet" type="text/css" />
<br />
<br />
<br />
<br />
<div class="form-row">
    <div class="col-md-6">
        <div class="form-row">
            <div class="col">
                <h1>New User Request:</h1>
            </div>
        </div>
        @foreach (var item in Model)
        {



            if (item.Active == "No")
            {
                <div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-11 col-xl-9">
                                <div class="row">
                                    <div class="col-md-12">

                                        <h1 style="margin-top : 3%;">

                                            @Html.ActionLink("" + @Html.DisplayFor(modelItem => item.Name), "AddRole", new { id = item.Id })


                                        </h1>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            }







        }
    </div>
</div>
<div class="form-row">
    <div class="col-md-6">
        <div class="form-row">
            <div class="col">
                <h1>Active Users:</h1>
            </div>
        </div>
        @foreach (var item in Model)
        {

            if (item.Active == "Yes")
            {
                <div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-11 col-xl-9">
                                <div class="row">
                                    <div class="col-md-12">

                                        <h1 style="margin-top : 3%;">

                                            @Html.ActionLink("" + @Html.DisplayFor(modelItem => item.Name), "EditRole", new { id = item.Id })


                                        </h1>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <hr />

            }


        }
    </div>
</div>