@model TermProjectUI.Models.VolunteerModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit User</h2>
<style>
    a {
        color: white;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row">
            <div class="col-md-12">
                <font color="red"><strong>*</strong></font>Name

                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "width:255px;" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-12">
                <font color="red"><strong>*</strong></font>Email Address
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "width:255px;" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12">
                <font color="red"><strong>*</strong></font>Password <br />

                @Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @class = "form-control",@style = "width:255px;" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-12">
                <font color="red"><strong>*</strong></font>Confirm Password <br />

                @Html.TextBoxFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control",@style = "width:255px;" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-row">
                        <p></p>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-row">
                        <div class="col-md-6">
                            <button class="btn btn-primary" type="button" style=" width: 15%; float:right; background-color: grey;border-color: black; margin-left: 10px;width:140px;"> @Html.ActionLink("Cancel", "Details", new { id = Model.Id }) </button>
                            <button class="btn btn-primary" type="submit" value="Save" id="btnSave" style="float:right; background-color: grey;border-color: black;width:140px;">Submit</button>
                            <br /><br /><br />


                        </div>
                    </div>

                </div>
            </div>
        </div>
        </div>
        }


