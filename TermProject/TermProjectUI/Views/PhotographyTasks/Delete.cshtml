@model TermProjectUI.Models.OtherTaskModel

@{
    ViewBag.Title = "Delete";
}
    <style>
        a {
            color: white;
        }
    </style>

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Other Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Requester: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.requester)
        </dd>

        <dt>
            Task Title: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taskTitle)
        </dd>

        <dt>
            Poster Name: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.posterName)
        </dd>
        <dt>
            Task Specifications:
        </dt>

        <dd>
            @foreach (var item in Model.TaskRequirements)
            {

                <p> @Html.DisplayFor(model => item.Key) : @Html.DisplayFor(model => item.Value)</p>



            }
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-default" style="color: white; margin-top: 2px; background-color: grey;border-color: black;" /> |
    <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Cancel", "Details", new { id = Model.Id }) </button>

</div>
    }
</div>
