@model TermProjectUI.Models.PhotographyTaskModel

@{
    ViewBag.Title = "Delete";
}
    <style>
        a {
            color: white;
        }
    </style>

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Other Task</h4>
    <hr />
    <dl class="dl-horizontal">
     

        <dt>
            Task Title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taskName)
        </dd>

        <dt>
            Poster Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.posterName)
        </dd>


        <dt>
            Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.location)
        </dd>

        <dt>
            Photographer:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.photographerName)
        </dd>
        <dt>
            Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taskDate)
        </dd>
        <dt>
            Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taskTime)
        </dd>

        <dt>
            Task Specifications:
        </dt>

        <dd>
            @foreach (var item in Model.Dogs)
            {

    <p> Name: @Html.DisplayFor(model => item.txtName)</p>
                    <p> Breed:@Html.DisplayFor(model => item.txtBreed)</p>
                                    <p> Size:@Html.DisplayFor(model => item.txtSize)</p>
                                                    <p> Notes:@Html.DisplayFor(model => item.txtNotes)</p>}
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class="btn btn-default" style="color: white; margin-top: 2px; background-color: grey;border-color: black;" /> |
    <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Cancel", "Details", new { id = Model.Id }) </button>

</div>
    }
</div>
