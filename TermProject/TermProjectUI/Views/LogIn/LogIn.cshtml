@model TermProjectUI.Models.LogInModel

@{
    ViewBag.Title = "Create";
}

<h2>Log In</h2>
<style>
    a {
        color: white;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-row">

            <div class="col-md-12">
                <font color="red"><strong>*</strong></font>Email Address
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" ,@style="width:255px;"} })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br /><br /><br/>
        <div class="form-row">

            <div class="col-md-12">

                <font color="red"><strong>*</strong></font>Password

                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "width:255px;" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <script src="~/Scripts/jquery-3.4.1.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>

        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-row">
                        <div class="col">
                            <font color="red" size="3px">
                                <p>@ViewBag.Message</p>
                            </font>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-row">
                        <div class="col-md-3">
                            <a> @Html.ActionLink("Forgot Password?", "ForgotPassword", "LogIn", new { area = "" }, new { @style = "color:blue;float:right;" })</a>

                        </div>
                    </div>

                </div>
            </div>
            <br /><br /><br /><br />
            <div class="form-row">
                <div class="col-md-12">
                    <div class="form-row">
                        <div class="col-md-3">

                            <button class="btn btn-primary" type="submit" value="Log in" id="btnSave" style="float:left; background-color: grey;border-color: black;margin-right:10px;width:120px;">Log in</button>
                            <button class="btn btn-primary" type="submit" value="Register" style="float:left; background-color: grey;border-color: black;width:120px;">@Html.ActionLink("Register", "Create", "Volunteers", new { area = "" }, null)</button>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}


