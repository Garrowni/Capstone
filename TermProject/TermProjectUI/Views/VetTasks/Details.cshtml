@model TermProjectUI.Models.VetTaskModel

@{
    ViewBag.Title = "Details";
}


<style>
    a {
        color: white;
    }
</style>

<br />
<br />
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-xl-9">
                <div class="row">
                    <div class="col">
                        <img src="~/Images/other_Nav.JPG" style="float: left; height: 15%; width: 15%;">
                        <br />
                        <h1 style="float: left;margin-top: 2%;">  @Html.DisplayFor(model => model.taskName)</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) </button>
                        <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Delete", "Delete", new { id = Model.Id }) </button>



                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8" style="width: 95%; border-right: solid 1px lightgray">
                        <div class="row"><strong>Pick Up</strong></div>
                        <div class="row">Location:  @Html.DisplayFor(model => model.pickupLocation)</div>
                        <div class="row">Date:  @Html.DisplayFor(model => model.PUDate)</div>
                        <div class="row">Time:  @Html.DisplayFor(model => model.PUTime)</div>
                        <div class="row">Volunteer:  @Html.DisplayFor(model => model.pickupVolunteer)</div>
                        <div class="row"><strong>Appointment</strong></div>
                        <div class="row">Location:  @Html.DisplayFor(model => model.appointmentAddress)</div>
                        <div class="row">Date:  @Html.DisplayFor(model => model.APDate)</div>
                        <div class="row">Time:  @Html.DisplayFor(model => model.APTime)</div>
                        <div class="row">Reason:  @Html.DisplayFor(model => model.appointmentReason)</div>
                        <div class="row">Notes:  @Html.DisplayFor(model => model.appointmentNotes)</div>

                        <div class="row"><strong>Dropoff</strong></div>
                        <div class="row">Location:  @Html.DisplayFor(model => model.dropoffLocation)</div>
                        <div class="row">Date:  @Html.DisplayFor(model => model.DODate)</div>
                        <div class="row">Time:  @Html.DisplayFor(model => model.DOTime)</div>
                        <div class="row">Volunteer:  @Html.DisplayFor(model => model.dropoffVolunteer)</div>
                        <div class="row"><strong>Dog</strong></div>
                        <div class="row">Name:  @Html.DisplayFor(model => model.dogName)</div>
                        <div class="row">Breed:  @Html.DisplayFor(model => model.dogBreed)</div>
                        <div class="row">Size:  @Html.DisplayFor(model => model.dogSize)</div>
                        <div class="row">Notes:  @Html.DisplayFor(model => model.dogNotes)</div>
                      
                        <div class="row"><strong>Additional Information:</strong>  @Html.DisplayFor(model => model.AdditionalInfo)</div>
                    </div>
                </div>


            </div>
            <div class="col-md-4 col-xl-3">
                <div class="row">
                    <div class="col">
                        <img src="~/Images/map.png" style="margin-top: 10%;  margin-left: -20px; width: 270px; height: 225px;       />
                    </div>
                </div>

                <br />
                <br />
                <div class="row">
                    <div class="col">
                        <br />
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card">
                            Poster
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div><img class="mr-3" style=" float: left; width: 25px; height:25px;" src="@Html.DisplayFor(model=>model.posterPhoto)" /></div><small style="margin-left: 2px">   @Html.DisplayFor(model => model.posterName)</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="card">
                            Requester
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div><img class="mr-3" style=" float: left; width: 25px; height:25px;" src="~/Images/ellie.jpg" /></div>
                </div><br />
                <div class="row">
                    <div class="col">
                        <div class="card">
                            Assigned Volunteers
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <small style="float: left">0 Volunteers Assigned</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <button class="btn btn-primary" type="button" style="float:left;margin-top: 5%;background-color: grey;border-color: black;">Join Task</button>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>





