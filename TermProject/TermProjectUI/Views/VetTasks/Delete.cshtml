@model TermProjectUI.Models.VetTaskModel

@{
    ViewBag.Title = "Delete";
}
   

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Other Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Requester:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.requester)
        </dd>

        <dt>
            Task Title:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taskName)
        </dd>

        <dt>
            Poster Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.posterName)
        </dd>








        <dt>
            Drop Off Location:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dropoffLocation)
        </dd>

        <dt>
            Volunteer Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dropoffVolunteer)
        </dd>

        <dt>
            Drop Off Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DODate)
        </dd>

        <dt>
            Dropoff Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DOTime)
        </dd>

        <dt>
            Appointment Address:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.appointmentAddress)
        </dd>
        <dt>
            Appointment Dates:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.APDate)
        </dd>
        <dt>
            Appointment Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.APTime)
        </dd>

        <dt>
            Appointment Reason:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.appointmentReason)
        </dd>
        <dt>
            Appointment Notes:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.appointmentNotes)
        </dd>


        <dt>
            Pick Up Location:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pickupLocation)
        </dd>

        <dt>
            Volunteer Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pickupVolunteer)
        </dd>

        <dt>
            Pick Up Date:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUDate)
        </dd>

        <dt>
            Pickup Time:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PUTime)
        </dd>




        <dt>
            Dog Name:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dogName)
        </dd>

        <dt>
            Dog Breed:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dogBreed)
        </dd>

        <dt>
            Dog Size:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dogSize)
        </dd>

        <dt>
            Dog Notes:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dogNotes)
        </dd>


        <dt>
            Documents:
        </dt>

        <dd>
            @foreach (var item in Model.FileList)
            {

                <ul>
                    <li>
                        @Html.ActionLink("Download", "Download", new { FileName = item.ToString(), style = "color:blue" })
                        @Html.DisplayFor(model => item)
                    </li>
                </ul>


            }
        </dd>

    </dl>


    <dt>
        Extra Notes:
    </dt>

    <dd>
        @Html.DisplayFor(model => model.AdditionalInfo)
    </dd>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" style="color: white; margin-top: 2px; background-color: grey;border-color: black;" /> |
            <button class="btn btn-primary" type="button" style="margin-top: 2px; background-color: grey;border-color: black;"> @Html.ActionLink("Cancel", "Details", new { id = Model.Id }, new { @style = "color:white;" }) </button>

        </div>
    }
</div>
